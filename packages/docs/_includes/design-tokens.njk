<h2>Color</h2>

<table>
  <tr>
    <th>Preview</th>
    <th>Token</th>
    <th>Value</th>
  </tr>
  {% for token in color %}
    <tr>
      <td>
        <div style="background: {{token.value}}; height: var(--space-xxx-large); box-shadow: inset 0 0 0 1px rgba(0,0,0,.1); border-radius: 4px;"></div>
      </td>
      <td>
        <code>var(--{{token.name}})</code>
      </td>
      <td>
        <code>{{ token.value }}</code>
      </td>
    </tr>
  {% endfor %}
</table>

