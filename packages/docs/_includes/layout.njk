  <body>
    <m-universal-header></m-universal-header>
    {% include 'site-header.njk' %}
    <main class="layout">

      {% include 'site-navigation.njk' %}
      <aside class="site-layout__right">
        <div class="sticky-top">
          {% include 'table-of-contents.njk' %}

          <a href="https://github.com/mlibrary/design-system/tree/docs/packages/docs/{{ page.inputPath }}" class="edit-on-github__link">{% include 'github-svg.njk' %}Submit an edit <span class="visually-hidden">on GitHub</span></a>
        </div>
      </aside>

      <article class="site-layout__center owl prose">
        {{ content | safe }}

        <p class="need-help">
          <strong>Need help?</strong> If you have a question about the Design System, <a href="/support">contact the team</a>.</p>
      </article>
    </main>

    {% include 'footer.njk' %}
    <script src="https://cdn.jsdelivr.net/npm/anchor-js/anchor.min.js"></script>
